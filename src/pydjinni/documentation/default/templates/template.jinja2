{%- macro nav_tree(tree) -%}
    {% for key, value in tree.items() %}
        <li>
        {% if value is mapping %}
            <a>{{ key }}</a>
            <ul>
            {{ nav_tree(value) }}
            </ul>
        {% else %}
            <a href="{{ root }}{{ value }}" {{ 'class="active"' if value|string == (current_generator.key ~ "/" ~ relative_path) }}>{{ key }}</a>
        {% endif %}
        </li>
    {% endfor %}
{%- endmacro -%}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ config.title }} - {{ name }}</title>
    <link rel="stylesheet" type="text/css" href="{{ root }}style.css">
    <link rel="icon" type="image/x-icon" href="{{root}}{{ logo }}">
</head>
<body>
    <nav>
        <header>
            <img src="{{ root }}{{ logo }}"/>
            <h1>{{ config.title }}</h1>
            <p>{{ config.description }}</p>
            <input id="search" type="text" placeholder="Search..."/>
        </header>

        <label for="overview">Overview</label>
        <ul>
            <li><a href="{{ root }}{{ current_generator.key }}/index.html" {{ 'class="active"' if relative_path == "index.html" }}>Home</a></li>
            {% for doc in config.docs.keys() %}
            {% set doc_relative_path = current_generator.key ~ "/" ~ doc|lower ~ ".html" %}
            <li><a href="{{ root }}{{ doc_relative_path }}" {{ 'class="active"' if doc_relative_path == (current_generator.key ~ "/" ~ relative_path) }}>{{ doc }}</a></li>
            {% endfor %}
        </ul>
        <label for="tree">Interface</label>
        <ul id="tree">
            {{ nav_tree(tree) }}
        </ul>
    </nav>
    <main>
        {% if decl %}
        <div class="content" id="language-picker">
            <ul >
                {% for generator in generators %}
                {% set language_relative_path = generator.key ~ "/" ~ relative_path %}
                <li><a href="{{ root }}{{ language_relative_path }}" {{ 'class="selected"' if generator.key == current_generator.key }}>{{ generator.name }}</a></li>
                {% endfor %}
            </ul>
        </div>
        <div id="title">
            <h1>{{ name }}
            {% if deprecated %}
                <div class="badge deprecated">Deprecated
                    {% if deprecated is string %}
                    <span class="tooltip">{{ deprecated }}</span>
                    {% endif %}
                </div>
            {% endif %}
            </h1>
        </div>

        {% endif %}
        <div class="content">
            {{ content | indent(8) }}
        </div>
    </main>
</body>
</html>
